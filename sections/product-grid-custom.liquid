{% schema %}
{
  "name": "Product Grid Custom",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Product Grid Custom",
      "blocks": [
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" },
        { "type": "product" }
      ]
    }
  ]
}
{% endschema %}

<section class="custom-product-grid">
  <div class="grid">
    {% for block in section.blocks %}
      {% if block.settings.product != blank %}
        {% assign product = all_products[block.settings.product] %}
        <div class="product-card" data-product-handle="{{ product.handle }}">
          <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
          <button class="open-popup" data-handle="{{ product.handle }}">View</button>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- Popup Modal -->
<div id="product-popup" class="popup hidden">
  <div class="popup-content">
    <button id="popup-close">&times;</button>
    <div id="popup-body"></div>
  </div>
</div>
